generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  lastname        String
  password        String
  published       Boolean  @default(false)
  publishedPhotos Int[]
  publishedVideos Int[]
  userLike        Int[]
  userDislike     String[]
  userFavorites   Int[]
  imageUrl        String?
  friends         Int[]
}

model Images {
  id          Int      @id @default(autoincrement())
  published   Boolean  @default(false)
  authorId    Int
  authorEmail String
  createdAt   DateTime @default(now())
  title       String
  likes       Int
  dislikes    Int
}

model Videos {
  id          Int      @id @default(autoincrement())
  published   Boolean  @default(false)
  authorId    Int
  authorEmail String
  imageName   String
  createdAt   DateTime @default(now())
  title       String
  likes       Int
  dislikes    Int
}
